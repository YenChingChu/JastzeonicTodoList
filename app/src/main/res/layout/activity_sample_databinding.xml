<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sampleViewModel"
            type="jastzeonic.com.jastzeonictodolist.view.model.SampleViewModel" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@={sampleViewModel.editTextContent}"
            android:visibility="gone" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@={sampleViewModel.editTextContent}"
            android:visibility="gone" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@={sampleViewModel.editTextContent}"
            android:visibility="gone" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            spinnerList="@{sampleViewModel.parentList}"
            selectionPosition="@={sampleViewModel.selectedPosition}"
             />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            spinnerList="@{sampleViewModel.subList}"
             />

    </LinearLayout>

</layout>